#!/bin/sh
# postinst script for passhport
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

PASSHPORT_HOME='/var/lib/passhport'

case "$1" in
    configure)
	    echo "Creating system user 'passhport'…"
	    adduser --system --group --no-create-home --home "${PASSHPORT_HOME}" --shell /bin/bash --disabled-password passhport
	    chown -R passhport:passhport "${PASSHPORT_HOME}" /etc/passhport /var/log/passhport
	    echo "Creating ssh pubkeys (rsa and ecdsa)…"
	    /usr/bin/ssh-keygen -t rsa -b 4096 -N "" -f "${PASSHPORT_HOME}/.ssh/id_rsa"
	    /usr/bin/ssh-keygen -t ecdsa -b 521 -N "" -f "${PASSHPORT_HOME}/.ssh/id_ecdsa"
	    echo "Creating passhport DB…"
	    /var/lib/passhport/python-run-env/bin/python "${PASSHPORT_HOME}/passhportd/db_create.py"
	    echo "Creating cert private key…"
	    openssl genrsa -out "${PASSHPORT_HOME}/certs/key.pem" 4096
	    openssl req -new -key "${PASSHPORT_HOME}/certs/key.pem" \
		-config "/usr/share/passhport/openssl.cnf" \
		-out "${PASSHPORT_HOME}/certs/cert.pem" \
		-subj "/C=FR/ST=Ile De France/L=Ivry sur Seine/O=LibrIT/OU=DSI/CN=passhport.librit.fr" \
		-x509 \
		-days 365 \
		-sha256 \
		-extensions v3_req
	    systemctl daemon-reload
	    systemctl enable passhportd
	    systemctl start passhportd
	    chown -R passhport:passhport "${PASSHPORT_HOME}" /etc/passhport /var/log/passhport
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
